<Page x:Class="Tournament421_SemenovaOlesya.Pages.PlayerNavigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament421_SemenovaOlesya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerNavigPage">

    <Grid Background="White">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button Width="160" Height="30" x:Name="player_zone" 
                    BorderBrush="Black" Background="#FFE2E2E2" FontSize="16" Click="player_zone_Click">Личная информация</Button>
        <Button Width="150" Height="30" x:Name="admin_zone" BorderBrush="Black" Background="#FFE2E2E2" FontSize="16" Margin="0,10,0,0">Список турниров</Button>
        <Button Width="150" Height="30" x:Name="viewer_zone" BorderBrush="Black" Background="#FFE2E2E2" FontSize="16" Margin="0,10,0,0">Моя команда</Button>
    </StackPanel>
    </Grid>
</Page>
